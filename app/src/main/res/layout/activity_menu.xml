<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bg">

    <ImageButton
        android:layout_width="210dp"
        android:layout_height="75dp"
        android:id="@+id/imageButton2"
        android:src="@drawable/menubtn1"
        android:scaleType="fitXY"
        android:background="#00ffffff"
        android:layout_marginLeft="-12dp"
        android:layout_below="@+id/imageView8"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="210dp"
        android:layout_height="75dp"
        android:id="@+id/imageButton3"
        android:background="#00ffffff"
        android:scaleType="fitXY"
        android:src="@drawable/menubtn2"
        android:layout_below="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2" />

    <ImageButton
        android:layout_width="210dp"
        android:layout_height="75dp"
        android:id="@+id/imageButton4"
        android:src="@drawable/menubtn3"
        android:scaleType="fitXY"
        android:background="#00ffffff"
        android:layout_below="@+id/imageButton5"
        android:layout_alignStart="@+id/imageButton5" />

    <ImageButton
        android:layout_width="210dp"
        android:layout_height="75dp"
        android:id="@+id/imageButton5"
        android:layout_below="@+id/imageButton3"
        android:layout_alignStart="@+id/imageButton3"
        android:background="#00ffffff"
        android:scaleType="fitXY"
        android:src="@drawable/menubtn4" />

    <ImageButton
        android:layout_width="210dp"
        android:layout_height="75dp"
        android:id="@+id/favorite"
        android:src="@drawable/menubtn5"
        android:scaleType="fitXY"
        android:background="#00ffffff"
        android:layout_below="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:id="@+id/imageView8"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logotxt"
        android:scaleType="fitXY" />

</RelativeLayout>