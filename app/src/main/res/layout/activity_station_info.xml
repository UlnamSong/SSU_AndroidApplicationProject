<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ulnamsong.ssu_androidapplicationproject.MainActivity"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="숭실대입구(살피재)"
        android:id="@+id/textView"
        android:textColor="#ffffffff"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView4" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:id="@+id/editText"
        android:background="#55ffffff"
        android:hint="역 검색"
        android:paddingLeft="12dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:singleLine="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="738"
        android:id="@+id/textView4"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/imageButton"
        android:src="@drawable/s_btn"
        android:scaleType="fitXY"
        android:background="#00000000"
        android:layout_marginLeft="15dp"
        android:layout_above="@+id/textView4"
        android:layout_toEndOf="@+id/editText" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:id="@+id/imageView"
        android:src="@drawable/info"
        android:scaleType="fitXY"
        android:layout_alignTop="@+id/littleLine"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="열차 시간표"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignStart="@+id/editText"
        android:layout_toStartOf="@+id/textView4"
        android:layout_marginLeft="-7dp"
        android:layout_marginBottom="-50dp"
        android:background="#dd36277e"
        android:textColor="#ffffffff"
        android:textSize="20dp"
        android:layout_marginRight="-10dp"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="첫/막차 정보"
        android:id="@+id/button2"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignEnd="@+id/imageButton"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginRight="-6dp"
        android:layout_marginBottom="-50dp"
        android:textSize="20dp"
        android:textColor="#ffffffff"
        android:background="#dd36277e"
        android:layout_marginLeft="-10dp"
        android:textStyle="bold" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="38dp"
        android:id="@+id/imageView2"
        android:src="@drawable/l_line"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7호선"
        android:id="@+id/littleLine"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="6dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상도"
        android:id="@+id/nextStn"
        android:layout_alignTop="@+id/littleLine"
        android:layout_alignStart="@+id/button"
        android:textSize="18dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="남성"
        android:id="@+id/prevStn"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        android:gravity="right"
        android:layout_alignEnd="@+id/imageButton"
        android:layout_alignTop="@+id/nextStn"
        android:layout_marginRight="3dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imageView3"
        android:src="@drawable/line"
        android:layout_below="@+id/nextStn"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:id="@+id/imageView4"
        android:src="@drawable/line"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_above="@+id/button"
        android:layout_marginBottom="130dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;&lt;&lt;&lt;"
        android:id="@+id/leftArrow"
        android:layout_alignTop="@+id/nextStn"
        android:layout_alignStart="@+id/editText"
        android:textSize="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">>>>"
        android:id="@+id/rightArrow"
        android:textSize="20dp"
        android:textColor="#ffffffff"
        android:layout_above="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="-5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이번 열차 : "
        android:id="@+id/nTrain1"
        android:layout_below="@+id/imageView3"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textColor="#ffffffff"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음 열차 : "
        android:id="@+id/nnTrain1"
        android:layout_below="@+id/nTrain1"
        android:layout_alignStart="@+id/nTrain1"
        android:textIsSelectable="false"
        android:textSize="18dp"
        android:textColor="#ffffffff"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이번 열차 : "
        android:id="@+id/nTrain2"
        android:layout_alignTop="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4"
        android:layout_marginTop="60dp"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        android:layout_marginLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="다음 열차 : "
        android:id="@+id/nnTrain2"
        android:layout_below="@+id/nTrain2"
        android:layout_alignStart="@+id/nTrain2"
        android:layout_marginTop="5dp"
        android:textColor="#ffffffff"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="새로 고침"
        android:id="@+id/refresh"
        android:layout_above="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:textColor="#ffffffff"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전역 도착"
        android:id="@+id/nn11"
        android:layout_above="@+id/nnTrain1"
        android:layout_toEndOf="@+id/nTrain1"
        android:textSize="18dp"
        android:textColor="#ffff0000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13분후 ( 반포 도착 )"
        android:id="@+id/nn12"
        android:layout_alignBottom="@+id/nnTrain1"
        android:layout_toEndOf="@+id/nTrain1"
        android:textColor="#ffffffff"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="숭실대입구(살피재) 진입"
        android:id="@+id/nn21"
        android:layout_above="@+id/nnTrain2"
        android:layout_toEndOf="@+id/nTrain2"
        android:textSize="18dp"
        android:textColor="#ffff0000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4분후 ( 장승배기 접근 )"
        android:id="@+id/nn22"
        android:layout_alignBottom="@+id/nnTrain2"
        android:layout_toEndOf="@+id/nTrain2"
        android:textColor="#ffffffff"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:id="@+id/train1"
        android:src="@drawable/train"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_marginBottom="6dp" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:id="@+id/train2"
        android:src="@drawable/train"
        android:layout_alignBottom="@+id/imageView4"
        android:layout_alignStart="@+id/refresh"
        android:layout_marginBottom="6dp" />


</RelativeLayout>
