<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="첫차 / 막차 정보"
        android:id="@+id/tv1"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffffffff"
        android:textSize="27dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="지하철역명"
        android:id="@+id/tv2"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/tv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:textColor="#ffffffff"
        android:textSize="18dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView6"
        android:src="@drawable/info"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY"
        android:layout_below="@+id/textView6" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상행선"
        android:id="@+id/up"
        android:layout_marginTop="90dp"
        android:layout_below="@+id/tv2"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:textColor="#ffffffff"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="첫차 : "
        android:id="@+id/upfirst"
        android:layout_below="@+id/up"
        android:layout_alignStart="@+id/up"
        android:layout_marginTop="15dp"
        android:textColor="#ffffffff"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="막차 : "
        android:id="@+id/uplast"
        android:layout_below="@+id/upfirst"
        android:layout_alignStart="@+id/upfirst"
        android:layout_marginTop="7dp"
        android:textSize="18dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하행선"
        android:id="@+id/down"
        android:textSize="18dp"
        android:textColor="#ffffffff"
        android:layout_alignTop="@+id/up"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="-10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="첫차 : "
        android:id="@+id/downfirst"
        android:layout_below="@+id/down"
        android:layout_alignStart="@+id/down"
        android:layout_marginTop="15dp"
        android:textColor="#ffffffff"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="막차 : "
        android:id="@+id/downlast"
        android:layout_below="@+id/downfirst"
        android:layout_alignStart="@+id/downfirst"
        android:textColor="#ffffffff"
        android:textSize="18dp"
        android:layout_marginTop="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7호선"
        android:id="@+id/textView6"
        android:layout_below="@+id/tv2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="25dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 평일 -"
        android:id="@+id/textView7"
        android:layout_above="@+id/downfirst"
        android:layout_centerHorizontal="true"
        android:textSize="18dp"
        android:textColor="#ffffffff"
        android:layout_marginBottom="27dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 토요일 -"
        android:id="@+id/textView8"
        android:textSize="18dp"
        android:textColor="#2ad7e7"
        android:layout_below="@+id/downlast"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상행선"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView8"
        android:layout_alignStart="@+id/uplast"
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하행선"
        android:id="@+id/textView10"
        android:layout_alignTop="@+id/textView9"
        android:layout_alignStart="@+id/downlast"
        android:textColor="#ffffffff"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="첫차 : "
        android:id="@+id/textView11"
        android:layout_below="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:textSize="18dp"
        android:textColor="#ffffffff"
        android:layout_marginTop="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="첫차 : "
        android:id="@+id/textView12"
        android:layout_alignTop="@+id/textView11"
        android:layout_alignStart="@+id/textView10"
        android:textSize="18dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="막차 : "
        android:id="@+id/textView13"
        android:layout_below="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_marginTop="7dp"
        android:textColor="#ffffffff"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="막차 : "
        android:id="@+id/textView14"
        android:layout_alignTop="@+id/textView13"
        android:layout_alignStart="@+id/textView12"
        android:textSize="18dp"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- 일/공휴일 -"
        android:id="@+id/textView15"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="#fe4949"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="상행선"
        android:id="@+id/textView16"
        android:layout_below="@+id/textView15"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginTop="10dp"
        android:textColor="#ffffffff"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="하행선"
        android:id="@+id/textView17"
        android:layout_below="@+id/textView15"
        android:layout_alignStart="@+id/textView14"
        android:layout_marginTop="10dp"
        android:textColor="#ffffffff"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="첫차 : "
        android:id="@+id/textView18"
        android:layout_below="@+id/textView16"
        android:layout_alignStart="@+id/textView16"
        android:layout_marginTop="15dp"
        android:textColor="#ffffffff"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="첫차 : "
        android:id="@+id/textView19"
        android:layout_below="@+id/textView17"
        android:layout_alignStart="@+id/textView17"
        android:layout_marginTop="15dp"
        android:textColor="#ffffffff"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="막차 : "
        android:id="@+id/textView20"
        android:layout_below="@+id/textView18"
        android:layout_alignStart="@+id/textView18"
        android:layout_marginTop="7dp"
        android:textColor="#ffffffff"
        android:textSize="18dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="막차 : "
        android:id="@+id/textView21"
        android:layout_below="@+id/textView19"
        android:layout_alignStart="@+id/textView19"
        android:layout_marginTop="7dp"
        android:textColor="#ffffffff"
        android:textSize="18dp" />

</RelativeLayout>